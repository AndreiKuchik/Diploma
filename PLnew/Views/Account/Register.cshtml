@model PLnew.Models.RegistrationViewModel
@{
    ViewBag.Title = "Register";
}



@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <div align="center" class ="formReg">
    @Html.AntiForgeryToken()
    <h2>Create a new account.</h2>
    <hr />
    @*@Html.ValidationSummary()*@
        <div class="form-group">
            @*@Html.LabelFor(m => m.MNumber, new { @class = "col-md-2 control-label" })*@
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Email, new {@class = "form-control", @placeholder = "Email"})
                @Html.ValidationMessageFor(m => m.Email)
            </div>
        </div>
        <div class="form-group">
            @*@Html.LabelFor(m => m.MNumber, new { @class = "col-md-2 control-label" })*@
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Login, new { @class = "form-control", @placeholder = "User name" })
                @Html.ValidationMessageFor(m => m.Login)

            </div>
        </div>
    <div class="form-group">
        @*@Html.LabelFor(m => m.MNumber, new { @class = "col-md-2 control-label" })*@
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.MNumber, new { @class = "form-control", @placeholder = "Mobil phone" })
            @Html.ValidationMessageFor(m => m.MNumber)

        </div>
    </div>
        <div class="form-group">
            @*@Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })*@
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Surname, new {@class = "form-control", @placeholder = "Surname"})
                @Html.ValidationMessageFor(m => m.Surname)
            </div>
        </div>
        <div class="form-group">
            @*@Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })*@
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Name, new {@class = "form-control", @placeholder = "Name"})
                @Html.ValidationMessageFor(m => m.Name)
              
            </div>
        </div>
    <div class="form-group">
        @*@Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })*@
        <div class="col-md-10">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Password" })
            @Html.ValidationMessageFor(m => m.Password)
        </div>
    </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="btn btn-default" value="Register"/>
            </div>
        </div>

        </div>
}
<div class="modal fade" id="modal-1">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <button class="close" type="button" data-dismiss="modal">
                    &times;
                </button>
            </div>
            <div class="modal-body">
                <h4 align="center">The user with the same name exists</h4>
            </div>
            <div class="modal-footer">
                <button class="btn btn-danger" type="button" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {

    @Scripts.Render("~/bundles/jqueryval")
@if (Model!=null)
{
    <script type="text/javascript"
            src="@Url.Content("~/scripts/Modal.js")">
    </script>
}
}
