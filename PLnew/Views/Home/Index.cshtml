@model PLnew.Models.LoginViewModel
@{
    ViewBag.Title = "Home Page";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
    <link href="~/Content/IndexHomeStyle.css" rel="stylesheet" type="text/css"/>
</head>
<body>
<div class="myImg">
    <div class="mablock">
        <div class="fblock">
            <div>
                <h1>Welcome to MyBlog</h1>
                <p>Connect with your friends — and other fascinating people. Get in-the-moment updates on the things that interest you. And watch events unfold, in real time, from every angle.</p>
            </div>
        </div>
        <div class="sblock">
            <div class="row">
                <div class="col-md-12 ">
                    <section id="loginForm">
                        <div class="auto">
                            @using (Html.BeginForm("Index", "Home", FormMethod.Post, new {@class = "form-horizontal", role = "form"}))
                            {

                                <h4 align="center">Authorization</h4>
                                <hr/>
                                @Html.AntiForgeryToken()
                                <div class="positionForm">
                                    @Html.ValidationSummary(true)
                                    <div class="form-group">
                                        <div class="col-md-10">
                                            @Html.TextBoxFor(m => m.Login, new {@class = "form-control", @placeholder = "Username"})
                                            @Html.ValidationMessageFor(m => m.Login)
                                        </div>
                                    </div>
                                    <div class="form-group">

                                        <div class="col-md-10">
                                            @Html.PasswordFor(m => m.Password, new {@class = "form-control", @placeholder = "Password"})
                                            @Html.ValidationMessageFor(m => m.Password)
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group positionLogin">
                                    <div class="col-md-offset-2 col-md-10">
                                        <input type="submit" value="Log in" class="btn btn-default"/>
                                    </div>
                                </div>
                            }
                        </div>
                    </section>
                </div>



            </div>
            <div class="reg">
                @using (Html.BeginForm("Register", "Home", FormMethod.Post, new {@class = "form-horizontal", role = "form"}))
                {
                    @Html.AntiForgeryToken()
                    <h4 align="center">New to MyBlog? Sign up</h4>
                    <hr/>
                    <div class="positionForm">
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" class="btn btn-default" value="Sign up for My Blog"/>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
    <div class="modal fade" id="modal-1">
        <div class="modal-dialog modal-sm">
            <div class="modal-content">
                <div class="modal-header">
                    <button class="close" type="button" data-dismiss="modal">
                        &times;
                    </button>
                </div>
                <div class="modal-body">
                    <h4 align="center"> Incorrect login or password </h4>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-danger" type="button" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
</body>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
@if (Model != null)
{
    <script type="text/javascript"
            src="@Url.Content("~/scripts/Modal.js")">
    </script>
}
}
</html>





